
<h2 class="my-4 text-center">Recent Orders</h2>
<hr>
<table class="w-100">
    <thead class="bg-secondary">
        <tr>
            <th>Order id</th>
            <th>Order date</th>
            <th>Order Total</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody class="text-center">
        <%@orders.each do |order|%>
        <tr>
            <th><%=link_to order.order_id,show_order_path(order.order_id)%></th>
            <th><%= order.created_at%></th>
            <td><%=order.order_total+order.order_tax%></td>
            <td><button class="btn" type="button">Processing</button></td>
        </tr>
        <%end%>
    </tbody>
</table>
